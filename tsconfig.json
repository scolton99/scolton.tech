{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["ES6"],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "src/scripts/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}